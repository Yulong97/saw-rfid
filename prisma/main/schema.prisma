// Prisma schema for Main Database
// Note: MAIN_DATABASE_URL is auto-generated from ONEDRIVE_BASE_PATH in lib/prisma/main.ts
// You only need to set ONEDRIVE_BASE_PATH in .env file

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-main"
}

datasource db {
  provider = "sqlite"
  url      = env("MAIN_DATABASE_URL")
}

// SAW Item table
model SAW_Item {
  id        Int      @id @default(autoincrement())
  name      String?
  description String?
  type_id Int?
  DesignParameter Json?  
  Fabrication_date  DateTime? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  type SAW_Type? @relation(fields: [type_id], references: [id])
}

// SAW type table
model SAW_Type {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)
  SAW_Items SAW_Item[]
}

// Data Management table
model data_management {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  file_path_relative String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}
